<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DetailsPage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/detailsFragment"
            android:name="test.certant.ar.pokedexlite.activity.fragment.DetailPokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_detail_pokemon" />

        <fragment
            android:id="@+id/abilitiesFragment"
            android:name="test.certant.ar.pokedexlite.activity.fragment.Abilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_abilities" />

        <fragment
            android:id="@+id/evolutionsFragment"
            android:name="test.certant.ar.pokedexlite.activity.fragment.Evolutions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_evolutions" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>